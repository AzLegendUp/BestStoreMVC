@model List<Product>

@{
}

<h2 class="text-center mb-5">List Of Products</h2>

<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-controller ="Products" asp-action="Create">New Product</a>
	</div>
	<div class="col">

	</div>

</div>

<table class="table">
	<thead>
		<tr>
			<th>
				Product Name
			</th>
			<th>
				Product Description
			</th>
			<th>
				Product Price
			</th>
			<th>
				Product Quantity
			</th>
			<th>
				Product Category
			</th>
			<th>
				Product Image
			</th>
			<th>
				Product Actions
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
				<tr>
					<td>@product.Id</td>
					<td>@product.Name</td>
					<td>@product.Brand</td>
					<td>@product.Category</td>
					<td>@product.Price)$</td>
					<td><img src="~/products/@product.ImageFileName" alt="Product Image" style="width: 100px; height: 100px;" />
					<td style="white-space:nowrap">
						<a class="btn btn-primary" asp-controller="Products" asp-action="Edit"
							asp-route-id="@product.Id">Edit</a>
						
						<a class="btn btn-danger" asp-controller="Products" asp-action="Delete"
							asp-route-id="@product.Id">Delete</a>	


					</td>	

				</tr>
		}
		

	</tbody>


</table>